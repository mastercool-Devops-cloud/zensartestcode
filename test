#!/bin/bash
echo "Running SchemaExporterTest..."
mvn -Dtest=SchemaExporterTest test
if [ $? -ne 0 ]; then
    echo "SchemaExporterTest failed! Stopping execution."
    exit 1
fi
echo "SchemaExporterTest completed successfully!"


<plugin>
    <groupId>org.codehaus.mojo</groupId>
    <artifactId>exec-maven-plugin</artifactId>
    <version>3.1.0</version>
    <executions>
        <execution>
            <id>run-schema-export</id>
            <phase>pre-integration-test</phase>  
            <goals>
                <goal>exec</goal>
            </goals>
        </execution>
    </executions>
    <configuration>
        <executable>bash</executable>
        <arguments>
            <argument>${project.basedir}/run-schema-export.sh</argument>
        </arguments>
    </configuration>
</plugin>
