spring:
  application:
    name: feds-config-server
  cloud:
    config:
      server:
        git:
          uri: https://github.com/orgs/standardbank-cibgm/repositories  # Replace with your Git repository
          clone-on-start: true
          default-label: main  # Git branch to use

management:
  endpoints:
    web:
      exposure:
        include: health, info, refresh
