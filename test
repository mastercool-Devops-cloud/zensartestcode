@TestInstance(TestInstance.Lifecycle.PER_CLASS)
public abstract class BaseTestSetup {

    @Autowired
    private SchemaExporterService schemaExporterService;

    @BeforeAll
    public void setUpSchemaExporter() throws IOException {
        schemaExporterService.exportSchema();
    }
}

@SpringBootTest
@ExtendWith(SpringExtension.class)
@Import(OracleTestContainerConfig.class)
public class OracleTest extends BaseTestSetup {

    @Test
    public void testOracleConnection() {
        System.out.println("ðŸ”„ Oracle Test is running after Schema Exporter...");
    }
}
