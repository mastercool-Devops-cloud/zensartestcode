import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

class HttpStatusInfoTest {

    @Test
    void testFromStatus_SuccessRange() {
        assertEquals(HttpStatusInfo.SUCCESS, HttpStatusInfo.fromStatus(200));
        assertEquals(HttpStatusInfo.SUCCESS, HttpStatusInfo.fromStatus(250));
        assertEquals(HttpStatusInfo.SUCCESS, HttpStatusInfo.fromStatus(299));
    }

    @Test
    void testFromStatus_ClientErrorRange() {
        assertEquals(HttpStatusInfo.CLIENT_ERROR, HttpStatusInfo.fromStatus(400));
        assertEquals(HttpStatusInfo.CLIENT_ERROR, HttpStatusInfo.fromStatus(450));
        assertEquals(HttpStatusInfo.CLIENT_ERROR, HttpStatusInfo.fromStatus(499));
    }

    @Test
    void testFromStatus_ServerErrorRange() {
        assertEquals(HttpStatusInfo.SERVER_ERROR, HttpStatusInfo.fromStatus(500));
        assertEquals(HttpStatusInfo.SERVER_ERROR, HttpStatusInfo.fromStatus(550));
        assertEquals(HttpStatusInfo.SERVER_ERROR, HttpStatusInfo.fromStatus(599));
    }

    @Test
    void testFromStatus_UnknownRange() {
        assertEquals(HttpStatusInfo.UNKNOWN, HttpStatusInfo.fromStatus(0));
        assertEquals(HttpStatusInfo.UNKNOWN, HttpStatusInfo.fromStatus(50));
        assertEquals(HttpStatusInfo.UNKNOWN, HttpStatusInfo.fromStatus(99));
    }

    @Test
    void testFromStatus_InvalidStatus_ReturnsNull() {
        assertNull(HttpStatusInfo.fromStatus(700)); // Out of any defined range
    }
}
