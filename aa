<Configuration status="info" name="Log4j2Config">

    <Properties>
        <Property name="LogPath">logs</Property>
        <Property name="LogFile">application</Property>
        <Property name="LogPattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%logger{6}] [%C{1}.%M(%F:%L)]: %msg%n</Property>
    </Properties>

    <Appenders>

        <!-- Rolling File Appender Handling Both JSON & Plain Text -->
        <RollingFile name="SharedFileAppender" fileName="${LogPath}/${LogFile}.log"
                     filePattern="${LogPath}/${LogFile}-%d{yyyy-MM-dd}.log.gz">

            <Composite>
                <Filters>
                    <!-- JSON for Specific Package -->
                    <RegexFilter regex=".*com\.example\.specificservice.*" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
                </Filters>

                <!-- JSON Layout for com.example.specificservice -->
                <JsonLayout complete="false" compact="true"/>

                <Filters>
                    <!-- Plain Text for Other Packages -->
                    <RegexFilter regex=".*com\.example\.specificservice.*" onMatch="DENY" onMismatch="NEUTRAL"/>
                </Filters>

                <!-- Plain Text Layout for Other Logs -->
                <PatternLayout>
                    <Pattern>${LogPattern}</Pattern>
                </PatternLayout>

            </Composite>

            <!-- Rolling Policy -->
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>

        </RollingFile>

    </Appenders>

    <Loggers>

        <!-- Logger for Specific Service (Logs in JSON) -->
        <Logger name="com.example.specificservice" level="info" additivity="false">
            <AppenderRef ref="SharedFileAppender"/>
        </Logger>

        <!-- Logger for General Application Logs (Logs in Plain Text) -->
        <Logger name="com.ab.cashflow.services" level="debug" additivity="false">
            <AppenderRef ref="SharedFileAppender"/>
        </Logger>

        <!-- Default Root Logger -->
        <Root level="info">
            <AppenderRef ref="SharedFileAppender"/>
        </Root>

    </Loggers>

</Configuration>
