public enum HttpStatusInfo {
    INFORMATIONAL(100, 199, "INFO", null, "Informational response"),
    SUCCESS(200, 299, "INFO", null, "Successful response"),
    REDIRECTION(300, 399, "INFO", null, "Redirection message"),
    CLIENT_ERROR(400, 499, "WARN", "HTTP-4XX", "Client error"),
    SERVER_ERROR(500, 599, "ERROR", "HTTP-5XX", "Server error");

    private final int minStatus;
    private final int maxStatus;
    private final String logLevel;
    private final String errorCodePrefix;
    private final String defaultMessage;

    HttpStatusInfo(int minStatus, int maxStatus, String logLevel, String errorCodePrefix, String defaultMessage) {
        this.minStatus = minStatus;
        this.maxStatus = maxStatus;
        this.logLevel = logLevel;
        this.errorCodePrefix = errorCodePrefix;
        this.defaultMessage = defaultMessage;
    }

    public static HttpStatusInfo fromStatus(int status) {
        for (HttpStatusInfo info : values()) {
            if (status >= info.minStatus && status <= info.maxStatus) {
                return info;
            }
        }
        return null; // Fallback (shouldn't happen if status codes are valid)
    }

    public String getLogLevel() {
        return logLevel;
    }

    public String getErrorCode(int status) {
        return errorCodePrefix != null ? errorCodePrefix + "-" + status : null;
    }

    public String getDefaultMessage() {
        return defaultMessage;
    }
}
