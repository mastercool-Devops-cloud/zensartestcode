import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.mockito.Mockito;
import org.springframework.core.env.Environment;

import static org.junit.jupiter.api.Assertions.*;
import static org.mockito.Mockito.*;

class EnvironmentNameTest {

    private Environment environment;
    private EnvironmentName environmentName;

    @BeforeEach
    void setUp() {
        environment = mock(Environment.class);
        environmentName = new EnvironmentName(environment);
    }

    @Test
    void testGetActiveProfile_WhenActiveProfileExists() {
        when(environment.getActiveProfiles()).thenReturn(new String[]{"dev"});

        String profile = environmentName.getActiveProfile();

        assertEquals("dev", profile);
    }

    @Test
    void testGetActiveProfile_WhenNoActiveProfile() {
        when(environment.getActiveProfiles()).thenReturn(new String[]{});

        String profile = environmentName.getActiveProfile();

        assertEquals("default", profile);
    }
}
