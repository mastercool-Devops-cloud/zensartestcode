if nvl(p_SSI_req, 'N') = 'Y' then
        begin
          select count(1)
            into l_var_OM_REP_PARTY
            from fx_exclusion
           where item_exclusion = 'OM_REP_PARTY'
             and item_exclusion_desc like '%' || p_input_clientno || '%';
        
          if l_var_OM_REP_PARTY < 1 then
            update fx_exclusion
               set item_exclusion_desc = item_exclusion_desc || '''' ||
                                         p_input_clientno || ''','
             where item_exclusion = 'OM_REP_PARTY'; -- SSI report
          end if;
        End;
        begin
          select count(1)
            into l_var_OM_REP_CIF
            from fx_exclusion
           where item_exclusion = 'OM_REP_CIF'
             and item_exclusion_desc like '%' || l_var_cif_cust_n || '%';
        
          if l_var_OM_REP_CIF < 1 then
          
            update fx_exclusion
               set item_exclusion_desc = item_exclusion_desc || '''' ||
                                         l_var_cif_cust_n || ''','
             where item_exclusion = 'OM_REP_CIF'; -- SSI report
          end if;
        
        End;
      end if;
