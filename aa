<Configuration status="info" name="Log4j2Config">

    <Properties>
        <Property name="LogPath">logs</Property>
        <Property name="LogFile">application</Property>
        <Property name="LogPattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%logger{6}] [%C{1}.%M(%F:%L)]: %msg%n</Property>
    </Properties>

    <Appenders>

        <!-- Rolling File Appender with Composite Layout -->
        <RollingFile name="SharedFileAppender" fileName="${LogPath}/${LogFile}.log"
                     filePattern="${LogPath}/${LogFile}-%d{yyyy-MM-dd}.log.gz">

            <Composite>

                <!-- Apply filters -->
                <Filters>
                    <!-- Only log errors and above -->
                    <ThresholdFilter level="error" onMatch="ACCEPT" onMismatch="DENY"/>
                    <!-- Filter logs from a specific package -->
                    <RegexFilter regex=".*com\.example\.specificservice.*" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
                </Filters>

                <Layouts>

                    <!-- JSON Layout -->
                    <JsonLayout complete="false" compact="true"/>

                    <!-- Standard Pattern Layout -->
                    <PatternLayout>
                        <Pattern>${LogPattern}</Pattern>
                    </PatternLayout>

                </Layouts>

            </Composite>

            <!-- Rolling Policy -->
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>

        </RollingFile>

    </Appenders>

    <Loggers>

        <!-- Logger for Specific Service -->
        <Logger name="com.example.specificservice" level="info" additivity="false">
            <AppenderRef ref="SharedFileAppender"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="info">
            <AppenderRef ref="SharedFileAppender"/>
        </Root>

    </Loggers>

</Configuration>
