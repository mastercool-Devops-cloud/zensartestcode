<Configuration status="info" name="Log4j2Config">

    <Properties>
        <Property name="LogPath">logs</Property>
        <Property name="LogFile">application</Property>
        <Property name="LogPattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%logger{6}] [%C{1}.%M(%F:%L)]: %msg%n</Property>
    </Properties>

    <Appenders>

        <!-- Rolling File Appender Handling Both JSON & Plain Text -->
        <RollingFile name="SharedFileAppender" fileName="${LogPath}/${LogFile}.log"
                     filePattern="${LogPath}/${LogFile}-%d{yyyy-MM-dd}.log.gz">

            <Composite>

                <!-- JSON Layout for Specific Packages -->
                <Filters>
                    <RegexFilter regex=".*(com\.sb\.fedssimplification\.utilitymodules\.loggingutility\.service|com\.sb\.fedssimplification\.cashflowcalculator).*"
                                 onMatch="ACCEPT" onMismatch="NEUTRAL"/>
                </Filters>
                <JsonLayout complete="false" compact="true"/>

                <!-- Plain Text Layout for Other Packages -->
                <Filters>
                    <RegexFilter regex=".*(com\.sb\.fedssimplification\.utilitymodules\.loggingutility\.service|com\.sb\.fedssimplification\.cashflowcalculator).*"
                                 onMatch="DENY" onMismatch="NEUTRAL"/>
                </Filters>
                <PatternLayout>
                    <Pattern>${LogPattern}</Pattern>
                </PatternLayout>

            </Composite>

            <!-- Rolling Policy -->
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>

        </RollingFile>

    </Appenders>

    <Loggers>

        <!-- Logger for Utility Module Service (Logs in JSON) -->
        <Logger name="com.sb.fedssimplification.utilitymodules.loggingutility.service" level="info" additivity="false">
            <AppenderRef ref="SharedFileAppender"/>
        </Logger>

        <!-- Logger for Cashflow Calculator (Logs in JSON) -->
        <Logger name="com.sb.fedssimplification.cashflowcalculator" level="info" additivity="false">
            <AppenderRef ref="SharedFileAppender"/>
        </Logger>

        <!-- Logger for Other Application Logs (Logs in Plain Text) -->
        <Logger name="com.ab.cashflow.services" level="debug" additivity="false">
            <AppenderRef ref="SharedFileAppender"/>
        </Logger>

        <!-- Default Root Logger -->
        <Root level="info">
            <AppenderRef ref="SharedFileAppender"/>
        </Root>

    </Loggers>

</Configuration>
