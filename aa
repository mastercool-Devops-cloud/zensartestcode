import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.mockito.Mockito;
import org.springframework.core.env.Environment;

import static org.junit.jupiter.api.Assertions.*;
import static org.mockito.Mockito.*;

class EnvironmentNameTest {

    private Environment environment;
    private EnvironmentName environmentName;

    @BeforeEach
    void setUp() {
        environment = mock(Environment.class);
        environmentName = new EnvironmentName(environment);
    }

    @Test
    void testGetActiveProfile_WhenActiveProfileExists() {
        when(environment.getActiveProfiles()).thenReturn(new String[]{"dev"});

        String profile = environmentName.getActiveProfile();

        assertEquals("dev", profile);
    }

    @Test
    void testGetActiveProfile_WhenNoActiveProfile() {
        when(environment.getActiveProfiles()).thenReturn(new String[]{});

        String profile = environmentName.getActiveProfile();

        assertEquals("default", profile);
    }
}
-------------------------------------
import static org.junit.jupiter.api.Assertions.assertEquals;

import org.junit.jupiter.api.Test;
import org.junit.jupiter.api.extension.ExtendWith;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.boot.test.context.SpringBootTest;
import org.springframework.test.context.junit.jupiter.SpringExtension;

@ExtendWith(SpringExtension.class)
@SpringBootTest(properties = "spring.application.name=test-app")
class ApplicationPropertiesTest {

    @Value("${spring.application.name}")
    private String applicationName;

    @Test
    void testApplicationNameProperty() {
        assertEquals("test-app", applicationName);
    }
}
