  Appenders:

    # Console Appender
    Console:
      name: ConsoleAppender
      target: SYSTEM_OUT
      PatternLayout:
        pattern: "${LogPattern}"

    # Corrected Rolling File Appender (Shared)
    RollingFile:
      name: SharedFileAppender
      fileName: "${LogPath}/${LogFile}.log"
      filePattern: "${LogPath}/${LogFile}-%d{yyyy-MM-dd}.log.gz"
      
      # Composite Layout (Combining JSON and Plain Text)
      Layout:
        Composite:
          Layouts:
            - JsonLayout:
                complete: false
                compact: true
            - PatternLayout:
                pattern: "${LogPattern}"

      # Policies for log rotation
      Policies:
        TimeBasedTriggeringPolicy:
          interval: 1
          modulate: true
        SizeBasedTriggeringPolicy:
          size: 10MB

      # Filters to match correct package names
      Filters:
        - RegexFilter:
            regex: ".*com\\.sb\\.fedssimplification\\.utilitymodules\\.loggingutility\\.service.*"
