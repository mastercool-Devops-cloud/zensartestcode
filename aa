<Configuration status="info" name="Log4j2Config">

    <Properties>
        <Property name="LogPath">logs</Property>
        <Property name="LogFile">application</Property>
        <Property name="LogPattern">%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%logger{6}] [%C{1}.%M(%F:%L)]: %msg%n</Property>
    </Properties>

    <Appenders>

        <!-- Rolling File Appender Handling Both JSON & Plain Text -->
        <RollingFile name="SharedFileAppender" fileName="${LogPath}/${LogFile}.log"
                     filePattern="${LogPath}/${LogFile}-%d{yyyy-MM-dd}.log.gz">

            <Composite>

                <!-- JSON Layout for Specific Packages -->
                <Filters>
                    <RegexFilter regex=".*(com\.sb\.fedssimplification\.utilitymodules\.loggingutility\.service|com\.sb\.fedssimplification\.cashflowcalculator).*"
                                 onMatch="ACCEPT" onMismatch="NEUTRAL"/>
                </Filters>
                <JsonLayout complete="false" compact="true"/>

                <!-- Plain Text Layout for Other Packages -->
                <Filters>
                    <RegexFilter regex=".*(com\.sb\.fedssimplification\.utilitymodules\.loggingutility\.service|com\.sb\.fedssimplification\.cashflowcalculator).*"
                                 onMatch="DENY" onMismatch="NEUTRAL"/>
                </Filters>
                <PatternLayout>
                    <Pattern>${LogPattern}</Pattern>
                </PatternLayout>

            </Composite>

            <!-- Rolling Policy -->
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>

        </RollingFile>

    </Appenders>

    <Loggers>

        <!-- Logger for Utility Module Service (Logs in JSON) -->
        <Logger name="com.sb.fedssimplification.utilitymodules.loggingutility.service" level="info" additivity="false">
            <AppenderRef ref="SharedFileAppender"/>
        </Logger>

        <!-- Logger for Cashflow Calculator (Logs in JSON) -->
        <Logger name="com.sb.fedssimplification.cashflowcalculator" level="info" additivity="false">
            <AppenderRef ref="SharedFileAppender"/>
        </Logger>

        <!-- Logger for Other Application Logs (Logs in Plain Text) -->
        <Logger name="com.ab.cashflow.services" level="debug" additivity="false">
            <AppenderRef ref="SharedFileAppender"/>
        </Logger>

        <!-- Default Root Logger -->
        <Root level="info">
            <AppenderRef ref="SharedFileAppender"/>
        </Root>

    </Loggers>

</Configuration>
-----------------------------------------
Configuration:
  status: info
  name: Log4j2Config

  Properties:
    Property:
      - name: LogPath
        value: logs/cashflow-calculator/local
      - name: LogFile
        value: cashflow-calculator
      - name: LogPattern
        value: "%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%logger{6}] [%C{1}.%M(%F:%L)]: %msg%n"

  Appenders:

    # Console Appender
    Console:
      name: ConsoleAppender
      target: SYSTEM_OUT
      PatternLayout:
        pattern: "${LogPattern}"

    # Single Rolling File Appender (Shared)
    RollingFile:
      name: SharedFileAppender
      fileName: "${LogPath}/${LogFile}.log"
      filePattern: "${LogPath}/${LogFile}-%d{yyyy-MM-dd}.log.gz"
      Policies:
        TimeBasedTriggeringPolicy:
          interval: 1
          modulate: true
        SizeBasedTriggeringPolicy:
          size: 10MB

      # Composite Layout (Both JSON and Plain Text)
      Composite:
        Layouts:
          - JsonLayout:
              complete: false
              compact: true
          - PatternLayout:
              pattern: "${LogPattern}"

      # Filters for different packages
      Filters:
        - RegexFilter:
            regex: ".*com\\.sb\\.fedssimplification\\.utilitymodules\\.loggingutility\\.service.*"
            onMatch: ACCEPT
            onMismatch: NEUTRAL
        - RegexFilter:
            regex: ".*com\\.sb\\.fedssimplification\\.cashflowcalculator.*"
            onMatch: ACCEPT
            onMismatch: DENY

  Loggers:

    # Logger for Specific Service (Logs in JSON)
    Logger:
      - name: com.sb.fedssimplification.utilitymodules.loggingutility.service
        level: info
        additivity: false
        AppenderRef:
          - ref: SharedFileAppender

      # Logger for Cashflow Service (Logs in Plain Text)
      - name: com.sb.fedssimplification.cashflowcalculator
        level: debug
        additivity: false
        AppenderRef:
          - ref: SharedFileAppender

    # Default Root Logger
    Root:
      level: info
      AppenderRef:
        - ref: ConsoleAppender
        - ref: SharedFileAppender
